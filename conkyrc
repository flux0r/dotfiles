alignment top_right
background no
border_inner_margin 9
border_width 10
cpu_avg_samples 2
default_color black
default_outline_color white
default_shade_color white
double_buffer yes
draw_borders no
draw_graph_borders yes
draw_outline yes
draw_shades no
extra_newline no
gap_x 10
gap_y 200
maximum_width 200
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
own_window yes
own_window_class Conky
own_window_colour brown
own_window_transparent yes
own_window_type desktop
show_graph_range no
show_graph_scale no
stippled_borders 3
update_interval 1.0
uppercase no
use_spacer right
use_xft yes
xftalpha 0.99
xftfont Verdana:size=8

TEXT
$color
${color grey}${outlinecolor black}SYSTEM ${hr 2}$color$outlinecolor
$nodename on $machine
$sysname $kernel
Uptime: $uptime

${color grey}${outlinecolor black}CPU ${hr 2}$color$outlinecolor
CPU1: ${cpu cpu1}%${alignr}CPU2: ${cpu cpu2}%
${cpugauge cpu1}${alignr}${cpugauge cpu2}

${color grey}${outlinecolor black}MEM ${hr 2}$color$outlinecolor
RAM:$mem/$memmax$alignr$memperc%
${membar 6}$color
SWP:$swap/$swapmax$alignr$swapperc%
${swapbar 6}$color

${color grey}${outlinecolor black}DISK ${hr 2}$color$outlinecolor
/:$alignr${fs_used /} / ${fs_size /}
${fs_bar 6 /}$color

${color grey}${outlinecolor black}NET (${addr em0}) ${hr 2}$color$outlinecolor
Down: $color${downspeed em0}k/s ${alignr}Up: ${upspeed em0}k/s
${downspeedgraph em0 25,99 000000 ff0000} ${alignr}${upspeedgraph em0 25,99 000000 00ff00}$color
Total downloaded: ${totaldown em0}
